/* components/postCard/index.wxss */
.postitem{
  position: relative;
  height: 200px;
}
.postitem .info{
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 15px;
}
.postitem image{
  display: block;
  width: 100%;
  height: 200px;
  filter: brightness(0.6);
}
.postitem .info view{
  color:white;
  font-size: 13px;
  letter-spacing: 1px;
}